{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": [
        "src",
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test-d.ts",
        "src/**/*.bench.ts",
        "src/_test"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
    }
}